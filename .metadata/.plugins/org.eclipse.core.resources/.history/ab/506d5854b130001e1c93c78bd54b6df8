package controles;

import java.util.Scanner;

public class DesafioDiaSemana {
public static void main(String[] args) {
	
	
	Scanner entrada = new Scanner(System.in); 
	System.out.println("Digite um dia da semana:");
	String day = entrada.next();
	
	if(day.toLowerCase() == "domingo") {
		System.out.println(1);
	} else if(day.toLowerCase() == "segunda") {
		System.out.println(2);
	} else if(day.toLowerCase() == "terça") {
		System.out.println(3);
	} else if(day.toLowerCase() == "quarta") {
		System.out.println(4);
	} else if(day.toLowerCase() == "quinta") {
		System.out.println(5);
	} else if(day.toLowerCase() == "sexta") {
		System.out.println(6);
	} else if(day.toLowerCase() == "sábado") {
		System.out.println(7);
	}
	entrada.close();
}
}
